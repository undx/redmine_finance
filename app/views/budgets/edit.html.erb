<%= error_messages_for 'budget' %>

<h2><%= link_to l(:label_budget_plural), :controller => 'budgets', :action => 'index', :id => @project %> &#187; <%=l(:label_budget_update)%></h2>

<% form_for :budget, @budget, 
			:url => { :action => 'edit', :budget_edit => @budget, :id => @project} ,
			:controller => 'budgets',
			:method => :post , 
			:builder => TabularFormBuilder do |f| %>
<div class="box tabular">
<p><%= f.text_field :amount, :required => true, :size => 10, :label => l(:amount) %>
	<%= date_select("post", "date", 
							:start_year => Date.today.year - 1, 
							:use_month_numbers => false,
							:discard_day => true, 
							:include_blank => false,
							:default => {:year => @budget.period.year, :month => @budget.period.month,  :day => @budget.period.day }
	) %>
</p>
<%= submit_tag l(:button_save) %>
</div>


<% end %>
